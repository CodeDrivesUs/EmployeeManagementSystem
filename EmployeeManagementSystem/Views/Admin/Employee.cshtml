
@{
    ViewBag.Title = "Employee";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model EmployeeManagementSystem.Business.SharedModels.EmployeeModel

<div class="row">
    <div class="col-xl-12">
        <div id="panel-6" class="panel">
            <div class="panel-hdr">
                <h2>
                    Employee Form
                </h2>
                <div class="panel-toolbar">
                    <button class="btn btn-panel" data-action="panel-collapse" data-toggle="tooltip" data-offset="0,10" data-original-title="Collapse"></button>
                    <button class="btn btn-panel" data-action="panel-fullscreen" data-toggle="tooltip" data-offset="0,10" data-original-title="Fullscreen"></button>
                    <button class="btn btn-panel" data-action="panel-close" data-toggle="tooltip" data-offset="0,10" data-original-title="Close"></button>
                </div>
            </div>
            <div class="panel-container show">

                @using (Html.BeginForm(null, null, System.Web.Mvc.FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="panel-content p-0">
                        <div class="panel-content">

                            <div class="form-row">
                                <div class="col-md-4 mb-3">
                                    <label class="form-label" for="validationDefault01">Employee Name</label>
                                    <input type="text" class="form-control" name="EmployeeName" placeholder="Full Name" />
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label class="form-label" for="validationDefault02">EMail</label>
                                    <input type="text" name="Email" placeholder="Email Address" class="form-control" />
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label class="form-label" for="validationDefault02">Mobile No</label>
                                    <input type="tel" name="CellPhone" class="form-control" placeholder="Mobile No" />
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-md-12 mb-3">
                                    <label class="form-label" for="validationDefaultUsername">Address</label>
                                    <textarea class="form-control" name="Address" rows="2">
 
                               </textarea>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-md-4 mb-3">
                                    <label class="form-label" for="validationDefaultUsername">Date Of Join</label>
                                    <input type="date" name="DateOfJoin" class="form-control" />
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label class="form-label" for="validationDefaultUsername">Select Department</label>
                                    <select class="form-control" name="DepartmentId">
                                        @foreach (var item in Model._allDepartments)
                                        {
                                            <option value="@item.Id">@item.DepartmentName</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label class="form-label" for="validationDefaultUsername">Select Division</label>
                                    <select class="form-control" name="DevisionId">
                                        @foreach (var item in Model._devisions)
                                        {
                                            <option value="@item.Id">@item.DevisionName</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="form-row mb-2">
                                <div class="col-md-4 mb-3">
                                    <label class="form-label" for="validationDefault03">Date Of Birth</label>
                                    <input type="date" name="DateOfBirth" class="form-control" />
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label class="form-label" for="validationDefault04">Gender</label>
                                    <input type="radio" name="Gender" value="Male" /><span>Male</span>
                                    <input type="radio" name="Gender" value="FeMale" /><span>FeMale</span>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label class="form-label" for="validationDefault05">Employee Image</label>
                                    <input type="file" name="EmplyeeImage" />
                                </div>
                            </div>
                        </div>
                        <div class="panel-content border-faded border-left-0 border-right-0 border-bottom-0 d-flex flex-row">
                            <input type="submit" value="submit" class="btn btn-default ml-auto" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>