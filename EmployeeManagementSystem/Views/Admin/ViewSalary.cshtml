
@{
    ViewBag.Title = "ViewSalary";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model  IEnumerable<EmployeeManagementSystem.Business.SharedModels.SalaryModel>
<div class="row">
    <div class="col-lg-12">
        <div id="panel-4" class="panel">
            <div class="panel-hdr">
                <h2>
                    Salary <span class="fw-300"><i>Records</i></span>
                </h2>
            </div>
            <div class="panel-container show">
                <div class="panel-content">

                    <HeaderTemplate>
                        <table id="dt-basic-example" class="table table-bordered table-hover table-striped w-100">
                            <thead class="bg-warning-200">
                                <tr>
                                    <th>Action</th>
                                    <th>Division</th>
                                    <th>EmployeeId</th>                                
                                    <th>Employee Name</th>                                
                                    <th>BasicSalary</th>
                                    <th>HouserentAllowance</th>
                                    <th>MedicalAllowance</th>
                                    <th>SpeicalAllowance</th>
                                    <th>FuelAllowance</th>
                                    <th>PhoneBillAllowance</th>
                                    <th>OtherAllowance</th>
                                    <th>TaxDeduction</th>
                                    <th>OtherDeduction</th>
                                    <th>GrossSalary</th>
                                    <th>TotalDeduction</th>
                                    <th>NetSalary</th>
                                   
                                    <th>CreatedOn</th>
                                    <th>CreatedOn</th>
                                </tr>
                            </thead>
                            <tbody>
                    </HeaderTemplate>
                    <ItemTemplate>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    <a class="btn btn-danger btn-sm" href="/">

                                        <i class="fal fa-trash"></i>Delete
                                    </a>
                                </td>
                                <td>@item.DivisionName</td>
                                <td>@item.EmployeeId</td>
                                <td>@item.EmployeeName</td>
                                <td>R @item.BasicSalary</td>
                                <td>R @item.HouseRent</td>
                                <td>R @item.MedicalAllowance</td>
                                <td>R @item.SpecialAllowance</td>
                                <td>R @item.FuelAllowance</td>
                                <td>R @item.PhoneBillAllowance</td>
                                <td>R @item.OtherAllowance</td>
                                <td>R @item.TaxDeductions</td>
                                <td>R @item.OtherDeductions</td>
                                <td>R @item.GrossSalary</td>
                                <td>R @item.TotalDeductions</td>
                                <td>R @item.NetSalary</td>
                                <td>@item.CreatedOn</td>
                                <td>@item.CreatedOn</td>
                                
                            </tr>
                        }
                        </ItemTemplate>
                    <FooterTemplate>
                        </tbody>
                        </table>
                    </FooterTemplate>

                    <!-- datatable end -->
                </div>
            </div>
        </div>
    </div>
</div>

