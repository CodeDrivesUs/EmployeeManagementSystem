@model EmployeeManagementSystem.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="flex-1" style="background: url(../../Content/Admin/img/svg/pattern-1.svg) no-repeat center bottom fixed; background-size: cover;">
    <div class="container py-4 py-lg-5 my-lg-5 px-4 px-sm-0">
        <div class="row">
            <div class="col-xl-12">
                <h2 class="fs-xxl fw-500 mt-4 text-white text-center">
                    Register Page
                </h2>
            </div>
            <div class="col-xl-6 ml-auto mr-auto">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="card p-4 rounded-plus bg-faded">
                        <div class="form-group row">                          
                            <div class="col-12 pl-1">
                                @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                                <div class="">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-6 pr-1">
                                @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                                <div class="">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-6 pr-1">
                                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                                <div class="">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row no-gutters">
                            <div class="col-md-8">
                                <p> Already have an account <span><a href="/Account/Login">Login</a></span></p>
                            </div>
                            <div class="col-md-4 ml-auto text-right">
                                <input type="submit" class="btn btn-default btn-lg mt-3" value="Register" />

                            </div>
                        </div>
                    </div>
                }
                </div>
        </div>
    </div>
    <div class="position-absolute pos-bottom pos-left pos-right p-3 text-center text-white">
        Employee Management System
    </div>
</div>


