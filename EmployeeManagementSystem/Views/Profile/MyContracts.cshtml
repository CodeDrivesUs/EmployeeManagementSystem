
@{
    ViewBag.Title = "MyContracts";
    Layout = "~/Views/Shared/_ApplicantLayout.cshtml";
}

@model  IEnumerable<EmployeeManagementSystem.Business.SharedModels.ApplicationContractModel>
<div class="row">
    <div class="col-lg-12">
        <div id="panel-4" class="panel">
            <div class="panel-hdr">
                <h2>
                   Contracts <span class="fw-300"><i>Records</i></span>
                </h2>
            </div>
            <div class="panel-container show">
                <div class="panel-content">

                    <HeaderTemplate>
                        <table id="dt-basic-example" class="table table-bordered table-hover table-striped w-100">
                            <thead class="bg-warning-200">
                                <tr>
                                    <th>Action</th>
                                    <th>Employement Type</th>
                                    <th>Status  </th>
                                    <th></th>

                                </tr>
                            </thead>
                            <tbody>
                    </HeaderTemplate>
                    <ItemTemplate>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    <a class="btn btn-danger btn-sm" href="/JobVacancy/JobApplication/?Id=@item">

                                        <i class="fal fa-eye"></i>View
                                    </a>
                                </td>
                                <td>@item.ContractModel.Tittle</td>
                                @if (item.StatusId == 0)
                                {
                            <span>Awaiting Applicant Signature</span>
                                }
                                else
                                {
                                    <span> Singed</span>
                                }
                                <td>@item.StatusId</td>

                            </tr>
                        }
                    </ItemTemplate>
                    <FooterTemplate>
                        </tbody>
                        </table>
                    </FooterTemplate>

                    <!-- datatable end -->
                </div>
            </div>
        </div>
    </div>
</div>


