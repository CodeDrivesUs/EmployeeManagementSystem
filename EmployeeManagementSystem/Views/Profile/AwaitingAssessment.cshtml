
@{
    ViewBag.Title = "AwaitingAssessment";
    Layout = "~/Views/Shared/_ApplicantLayout.cshtml";
}

@model  IEnumerable<EmployeeManagementSystem.Business.SharedModels.JobApplicationModel>
<div class="row">
    <div class="col-lg-12">
        <div id="panel-4" class="panel">
            <div class="panel-hdr">
                <h2>
                    Job Applications <span class="fw-300"><i>Records</i></span>
                </h2>
            </div>
            <div class="panel-container show">
                <div class="panel-content">

                    <HeaderTemplate>
                        <table id="dt-basic-example" class="table table-bordered table-hover table-striped w-100">
                            <thead class="bg-warning-200">
                                <tr>
                                    <th>Action</th>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>Email</th>
                                    <th>CellPhone</th>
                                    <th>Applied On</th>
                                    <th></th>

                                </tr>
                            </thead>
                            <tbody>
                    </HeaderTemplate>
                    <ItemTemplate>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a class="btn btn-danger btn-sm" href="/Profile/Assessment/?Id=@item.Id">
                                        <i class="fal fa-eye"></i>Take Assessment
                                    </a>
                                </td>
                                <td>@item.FirstName</td>
                                <td>@item.LastName</td>
                                <td>@item.Email</td>
                                <td>@item.Cellphone</td>

                                <td>@item.AppliedOn</td>
                                <td>@item.AppliedOn</td>

                            </tr>
                        }
                    </ItemTemplate>
                    <FooterTemplate>
                        </tbody>
                        </table>
                    </FooterTemplate>

                    <!-- datatable end -->
                </div>
            </div>
        </div>
    </div>
</div>



